!!! 5
%html
  %head
    %title EmberCloneMail: A Sample App Built With EmberJS
    %link{:href=>"/css/emberclonemail.css", :rel=>"stylesheet", :type=>"text/css"}

  %body
    %section.header
      .container
        %header
          %h1 EmberCloneMail
        %header.help
          This application demonstrates the use
          %a{:href => "http://emberjs.com"}Ember.js
          \. It's a clone of my
          %a{:href => "http://emberclonemail.heroku.com"}EmberCloneMail
          app, re-written in EmberJS, in order to learn it.
            
    %section.content
      .container
        %navigation
          %section#app-selector
            %select
              %option{:value=>"mail"}Mail
              %option{:value=>"contacts"}Contacts
          %section#navigation

        %article#main
          #loading
            %img{:src=>"/images/ajax-loader.gif"}

    %section.footer
      .container
        %footer
          %ul
            %li
              Copyright &copy;2011
              %a{:href=>"http://mutedsolutions.com"}Muted Solutions, LLC.
              All rights reserved. 
          %ul
            %li
              EmberCloneMail is a sample app built with
              %a{:href => "http://emberjs.com"}EmberJS
          %ul
            %li.title EmberCloneMail Source:
            %li
              %a{:href => "http://github.com/derickbailey/emberclonemail"}
                The Github Project
            %li
              %a{:href => "http://derickbailey.github.com/emberclonemail/docs/emberclonemail.html"}
                The Annoted Code
          %ul
            %li.title
              Find me Twitter:
            %li
              %a{:href => "http://twitter.com/derickbailey"}@derickbailey
            %li
              %a{:href => "http://twitter.com/backbonejsclass"}@backbonejsclass
            %li
              %a{:href => "http://twitter.com/mutedsolutions"}@mutedsolutions
          %ul
            %li.title
              Find me on the web:
            %li
              %a{:href => "http://backbonetraining.net"}BackboneTraining.net
            %li
              %a{:href => "http://watchmecode.net"}WatchMeCode.net
            %li
              %a{:href => "http://derickbailey.lostechies.com"}DerickBailey.lostechies.com
            %li
              %a{:href => "http://mutedsolutions.com"}MutedSolutions.com

    // pre-requisites and libraries
    %script{:src=>"/javascripts/vendor/jquery.js"}
    %script{:src=>"/javascripts/vendor/ember.js"}

    // general app files
    %script{:src=>"/javascripts/emberclonemail.js"}
    %script{:src=>"/javascripts/emberclonemail.collection.js"}
    %script{:src=>"/javascripts/emberclonemail.views.js"}
    %script{:src=>"/javascripts/emberclonemail.appselection.js"}
    %script{:src=>"/javascripts/emberclonemail.routing.js"}

    // routing files

    // mail app files
    %script{:src=>"/javascripts/mail/emberclonemail.mailapp.js"}
    %script{:src=>"/javascripts/mail/emberclonemail.mailapp.categories.js"}
    %script{:src=>"/javascripts/mail/emberclonemail.mailapp.mailbox.js"}
    %script{:src=>"/javascripts/mail/emberclonemail.mailapp.routing.js"}

    // contacts app files
    %script{:src=>"/javascripts/contacts/emberclonemail.contactsapp.js"}
    %script{:src=>"/javascripts/contacts/emberclonemail.contactsapp.categories.js"}
    %script{:src=>"/javascripts/contacts/emberclonemail.contactsapp.contactlist.js"}
    %script{:src=>"/javascripts/contacts/emberclonemail.contactsapp.routing.js"}

    :javascript
      $(function(){
        EmberCloneMail.start();
      });
